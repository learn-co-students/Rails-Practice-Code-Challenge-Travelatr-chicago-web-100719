<%if flash[:errors]%>
  <%flash[:errors].each do |error|%>
   <%= error%><br>
  <%end%>
<%end%>

<%=form_for @post do |f|%>
  <%=f.label :blogger_id%>
  <%=f.collection_select :blogger_id, Blogger.all, :id, :name%>
  <br><br>
  <%=f.label :destination%>
  <%=f.collection_select :destination_id, Destination.all, :id, :name%>
  <br><br>
  <%=f.label :title%><br>
  <%=f.text_field :title%>
  <br>
  <%=f.label :content%><br>
  <%=f.text_area :content, cols:75, rows:35%>
  <br>
  <%=f.submit%>
<%end%>